<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_header"
        android:layout_width="123dp"
        android:layout_height="100dp"
        android:text="'plant name'"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type_header"
        android:layout_width="132dp"
        android:layout_height="28dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="'plant type'"
        app:layout_constraintStart_toEndOf="@+id/name_header"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/water_frequency_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Times to water per week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_header" />

    <TextView
        android:id="@+id/sun_requirement_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun Requirement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_q_text" />

    <TextView
        android:id="@+id/water_q_text"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:text="'water q'"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_frequency_header" />

    <TextView
        android:id="@+id/sun_requirement_text"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:text="'sun req'"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sun_requirement_header" />

    <TextView
        android:id="@+id/maturation_text"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:text="'maturation time'"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maturation_header" />

    <TextView
        android:id="@+id/maturation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maturation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sun_requirement_text" />

    <TextView
        android:id="@+id/vulnerabilities_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vulnerabilities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maturation_text" />

    <TextView
        android:id="@+id/vulnerabilities_text"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="'vulnerabilities"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vulnerabilities_header" />

</androidx.constraintlayout.widget.ConstraintLayout>